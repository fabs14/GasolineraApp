<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/editLitros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Litros disponibles en sucursal"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editMetros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Metros de fila"
            android:focusable="false"
            android:clickable="false"
            android:inputType="none"
            android:backgroundTint="@color/purple_500"
            android:textColorHint="@android:color/darker_gray"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnDibujar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dibujar fila en el mapa"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular y Guardar"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
